<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header_select_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:text="@string/selectPlayers"
        android:background="@drawable/bottom_border" />

    <ListView
        android:id="@+id/choose_players_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="multipleChoice"
        android:layout_weight="1" />

    <Button
        android:id="@+id/startNewGamePlayerMgmtButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/standalone_button"
        android:text="@string/playerManagement"
        android:textColor="@color/white"
        android:onClick="playerManagementButton" />

    <Button
        android:id="@+id/startNewGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/standalone_button"
        android:text="@string/startNewGame"
        android:textColor="@android:color/white"
        android:onClick="startNewGameButton" />

</LinearLayout>
