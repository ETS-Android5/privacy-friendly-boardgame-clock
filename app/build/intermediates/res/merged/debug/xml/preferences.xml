    <PreferenceCategory android:title="@string/overviewHeading">
        <Preference android:summary="@string/overviewSummary" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/action_new_game">
        <Preference
            android:summary="@string/help_gameTime"
            android:title="@string/gameTimeNoColon" />
        <Preference
            android:summary="@string/help_roundTime"
            android:title="@string/roundTimeNoColon" />
        <Preference
            android:summary="@string/help_timeDelta"
            android:title="@string/timeDeltaNoColon" />
