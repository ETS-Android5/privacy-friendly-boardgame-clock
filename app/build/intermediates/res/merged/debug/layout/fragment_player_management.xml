<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/header_current_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:text="Current Players"
        android:background="@drawable/bottom_border" />

    <ListView
        android:id="@+id/current_players_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="multipleChoice"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/createNewPlayerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/standalone_button"
        android:text="Create New Player"
        android:textColor="@color/white"
        android:onClick="createNewPlayerButton"/>

    <Button
        android:id="@+id/addPlayerContactsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/standalone_button"
        android:text="Add Player From Contacts"
        android:textColor="@color/white"
        android:onClick="addPlayerContactsButton"/>


</LinearLayout>
