<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/header_help_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:text="Permission CONTACTS"
        android:background="@drawable/bottom_border" />

    <TextView
        android:id="@+id/desc_help_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/darkblue"
        android:text="This permission is used to retrieve contact data from your address book to create new players.

If not granted, the button ADD PLAYER FROM CONTACTS in the menu PLAYER MANAGEMENT is not visible."/>

    <TextView
        android:id="@+id/header_help_read_external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:text="Permission READ_EXTERNAL_STORAGE"
        android:background="@drawable/bottom_border" />

    <TextView
        android:id="@+id/desc_help_read_external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/darkblue"
        android:text="This permission is used to restore backups saved on your external storage.

If not granted, the button RESTORE BACKUP in the menu SETTINGS is not visible."/>

    <TextView
        android:id="@+id/header_help_write_external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:text="Permission WRITE_EXTERNAL_STORAGE"
        android:background="@drawable/bottom_border" />

    <TextView
        android:id="@+id/desc_help_write_external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/darkblue"
        android:text="This permission is used to create and save backups on your external storage.

If not granted, the button CREATE BACKUP in the menu SETTINGS is not visible."/>



</LinearLayout>
